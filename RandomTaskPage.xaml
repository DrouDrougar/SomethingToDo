<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SomethingToDoApp.RandomTaskPage"
             Title="Random Task">
    <VerticalStackLayout Padding="30,0" Spacing="25">
        <Grid RowSpacing="12" ColumnSpacing="12" RowDefinitions="*, *, *, *" ColumnDefinitions="*">
            <!--<Label 
            Grid.Column="1"
            Grid.Row="0"
            FontSize="Large"
            Text="Your Chosen Task is:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />-->


            <Label Grid.Column="1" Grid.Row="1" x:Name="NameLabel" Text="{Binding Name}" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="Large"/>

            <Label Grid.Column="1" Grid.Row="2"  Text="Task Description" FontAttributes="Bold" FontSize="Medium" HorizontalTextAlignment="Center"/>

            <Label Grid.Column="1" Grid.Row="3" x:Name="DescriptionLabel" Text="{Binding Description}" HorizontalTextAlignment="Center" FontSize="Small"/>

        </Grid>



        
    </VerticalStackLayout>
</ContentPage>